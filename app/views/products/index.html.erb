<% if user_signed_in? %>
  <%= link_to("Logout (#{current_user.email})", destroy_user_session_path, :method => :delete) %>
<% else %>
  <%= link_to('Login', new_user_session_path)  %>
<% end %>
<div class="row">
  <div class="jumbo center">
    <h1>Item Reviewer</h1>
    <h2>All products</h2>
  </div>
</div>
<div class="row">
  <button class="center" id="new-form"><span>+ </span>Add product</button>
</div>
<div class="row">
  <div class="center products">
    <% @products.each do |product| %>
      <div class="product-container">
        <%= link_to product.name, product %>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: 'new' %>
