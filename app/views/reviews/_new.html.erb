<div class="modal new-review-modal" id="form-modal">
  <%= form_for @review, url: [@product, @review], format: :json do |f| %>
    <div class="modal-content center">
      <div class="modal-header">
        <span class="close">x</span>
        <h2>Review for <%= @product.name %></h2>
      </div>
      <div class="modal-body">
        <div class="row">
          <%= f.label :content %>
        </div>
        <div class="row">
          <%= f.text_area :content %>
        </div>
        <div class="row">
          <%= f.label :rating %>
        </div>
        <div class="row">
          <%= f.range_field :rating, min: 1, max: 5, class: 'slide', id: 'rating-slider' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit 'Submit', class: 'submit' %>
      </div>
    </div>
  <% end %>
</div>
